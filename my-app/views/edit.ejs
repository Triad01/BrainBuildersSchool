<%-include("partials/head") %>
<body>
  <form
    class="form"
    method="post"
    action="/students/<%= found_student.id%>?_method=PATCH"
    enctype="application/x-www-form-urlencoded"
  >
    <input type="hidden" name="_method" value="PATCH" />
    <h1>Edit <%=found_student.firstName%>'s details</h1>
    <div>
      <label for="first_name">First name</label>

      <input
        id="firstName"
        name="firstName"
        type="text"
        value="<%= found_student.firstName %>"
      />
    </div>
    <div>
      <label for="last_name">Last name</label>
      <input
        id="lastName"
        name="lastName"
        type="text"
        value="<%= found_student.lastName %>"
      />
    </div>
    <div>
      <label for="email">Email</label>
      <input
        id="email"
        name="email"
        type="email"
        placeholder="example@gmail.com"
        value="<%= found_student.email %>"
      />
    </div>
    <div>
      <label for="age">Age</label>
      <input
        id="age"
        name="age"
        type="number"
        value="<%= found_student.age%>"
      />
    </div>
    <button class="btn">udpate</button>
  </form>
</body>
